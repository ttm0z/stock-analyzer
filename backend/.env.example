# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# Database Configuration (CHANGE THESE DEFAULTS!)
DATABASE_URL=postgresql://username:secure_password@localhost:5432/stockdb

# API Keys (Get new keys after revoking exposed ones)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
FMP_API_KEY=your_fmp_api_key_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_MAX_CONNECTIONS=50

# Cache Configuration
CACHE_DEFAULT_TTL=300
CACHE_KEY_PREFIX=stock_app

# Flask Configuration
FLASK_ENV=development
FLASK_SECRET_KEY=your_super_secure_secret_key_minimum_32_chars_here

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_chars
PASSWORD_SALT=your_password_salt_here

# Logging
LOG_LEVEL=INFO

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173